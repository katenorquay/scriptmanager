<%= form_for(highlight) do |f| %>
  <% if highlight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(highlight.errors.count, "error") %> prohibited this highlight from being saved:</h2>

      <ul>
      <% highlight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class='highlight'>Highlight</p>
  <div class='popup'>
    <div class='fields'>
      <%= f.text_field :text %>
      <%= f.text_field :color_code%>
      <%= f.text_field :comment%>
    </div>
    <div class='fields'>
      <%= f.text_field :script_id, placeholder: "#{@script.id}" %>
    </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
